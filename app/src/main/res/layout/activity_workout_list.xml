<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00353A"
    tools:context=".workout_list">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="900dp"
        android:layout_height="900dp"
        android:alpha="0.2"
        android:translationZ="-1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_regist" />


    <TextView
        android:id="@+id/day_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day 1"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <TextView
        android:id="@+id/level_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level : Easy"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/day_name"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/day_name"
        app:layout_constraintTop_toBottomOf="@+id/day_name"
        app:layout_constraintVertical_bias="0.011" />

    <ImageView
        android:id="@+id/back_workoutlist"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/day_name"
        app:layout_constraintEnd_toStartOf="@+id/day_name"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/backarrow_white" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:background="#00545E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level_name"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textvie_jdul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Workout List"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.028" />

            <TextView
                android:id="@+id/nama_workoutlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crunch Sit Up"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.081"
                app:layout_constraintStart_toEndOf="@+id/workout1"
                app:layout_constraintTop_toTopOf="@+id/workout1"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/nama_workoutlist2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crunch Sit Up"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/nama_workoutlist"
                app:layout_constraintTop_toTopOf="@+id/workout2"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/nama_workoutlist3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crunch Sit Up"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/nama_workoutlist2"
                app:layout_constraintTop_toTopOf="@+id/workout3"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/nama_workoutlist4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crunch Sit Up"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/nama_workoutlist3"
                app:layout_constraintTop_toTopOf="@+id/workout4"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/reps_workoutlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x 10"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/workout1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/nama_workoutlist"
                app:layout_constraintTop_toBottomOf="@+id/nama_workoutlist"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/reps_workoutlist2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x 10"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/workout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/nama_workoutlist2"
                app:layout_constraintTop_toBottomOf="@+id/nama_workoutlist2"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/reps_workoutlist3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x 10"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/workout3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/nama_workoutlist3"
                app:layout_constraintTop_toBottomOf="@+id/nama_workoutlist3"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/reps_workoutlist4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x 10"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/nama_workoutlist4"
                app:layout_constraintTop_toBottomOf="@+id/nama_workoutlist4"
                app:layout_constraintVertical_bias="1.0" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/workout1"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/crunchsitup"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textvie_jdul"
                app:layout_constraintVertical_bias="0.0" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/workout2"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/crunchsitup"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/workout1"
                app:layout_constraintVertical_bias="0.02" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/workout3"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/crunchsitup"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/workout2"
                app:layout_constraintVertical_bias="0.045" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/workout4"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginTop="29dp"
                android:src="@drawable/crunchsitup"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/workout3"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:textColor="@color/white"
        android:backgroundTint="#008A97"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>